<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/pu">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="#00B0FF"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back_More"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/backone"
                android:tint="#F8F2F2" />
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/mitr_semibold"
                android:layout_marginLeft="10dp"
                android:text="หน้าอื่นๆ"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />


        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <GridLayout
        android:columnCount="1"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_marginLeft="30dp"
        android:layout_weight="8"
        android:layout_marginTop="50dp"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="30dp">
        <!-- Row 1 -->
        <!-- Column 1 -->


        <Button
            android:id="@+id/report_admin"
            android:layout_width="180dp"
            android:layout_height="174dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/trans_orange_rectangle"
            android:fontFamily="@font/mitr_semibold"
            android:text="รายงาน"
            android:textSize="24sp" />


        <Button
            android:id="@+id/button_logout_admin"
            android:layout_width="180dp"
            android:layout_height="174dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/trans_orange_rectangle"
            android:fontFamily="@font/mitr_semibold"
            android:text="ออกจากระบบ"
            android:textSize="24sp"
           />
<!--        android:src="@drawable/logoutone"-->

    </GridLayout>
</LinearLayout>